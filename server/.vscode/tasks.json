{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Server build",
      "type": "shell",
      "command": "yarn",
      "args": [
        "--silent",
        "run",
        "build:server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Watch and Compile Project",
      "type": "shell",
      "command": "yarn",
      "args": [
        "--silent",
        "run",
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Build, Test and Lint",
      "type": "shell",
      "command": "yarn",
      "args": [
        "--silent",
        "run",
        "test:dev"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc",
        "$tslint5"
      ]
    }
  ]
}
