{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Server build",
      "type": "shell",
      "command": "yarn",
      "args": [
        "--silent",
        "run",
        "build:server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Client build",
      "type": "shell",
      "command": "yarn",
      "args": [
        "--silent",
        "run",
        "build:client"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
